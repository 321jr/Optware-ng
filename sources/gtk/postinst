#!/bin/sh

mkdir -p /opt/etc/gtk-3.0

echo "Configuring input modules"
rm -f /opt/etc/gtk-3.0/gtk.immodules
/opt/bin/gtk-query-immodules-3.0 > /opt/etc/gtk-3.0/gtk.immodules

echo "Updating icon cache"
for dir in `ls -d /opt/share/icons/*`; do
	if test -f ${dir}/index.theme; then
		/opt/bin/gtk-update-icon-cache ${dir}
	fi
done
